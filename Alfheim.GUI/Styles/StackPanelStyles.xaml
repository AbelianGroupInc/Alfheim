<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Alfheim.GUI.Styles">
    <Style x:Key="StackPanelFooter"
        TargetType="StackPanel">

        <Setter 
            Property="Background"
            Value="{StaticResource AccentColorBrush}" />

        <Setter
            Property="Orientation"
            Value="Horizontal" />

        <Setter
            Property="Height"
            Value="Auto" />
    </Style>

    <Style x:Key="DefaultHorizontalStackPanel"
        TargetType="StackPanel">

        <Setter
            Property="Orientation"
            Value="Horizontal" />

        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>
    
    <Style x:Key="FlatStackPanel"
           TargetType="StackPanel">

        <Setter
            Property="Margin"
            Value="10" />

        <Setter
            Property="Orientation"
            Value="Vertical" />

        <Setter
            Property="VerticalAlignment"
            Value="Center" />
    </Style>
</ResourceDictionary>