<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Alfheim.GUI.Styles">
    <Style x:Key="SimpleItemsControlStyle"
           TargetType="ItemsControl">

        <Setter
            Property="Margin"
            Value="6 10" />

        <Setter 
            Property="Background"
            Value="Transparent" />

        <Setter
            Property="BorderBrush"
            Value="#FFC7C7C7" />

        <Setter
            Property="BorderThickness"
            Value="1" />

        <Setter
            Property="Padding"
            Value="5" />
    </Style>

    <Style x:Key="SimpleItemsControlStyleWithoutBorder"
           TargetType="ItemsControl" >

        <Setter
            Property="Margin"
            Value="6 10" />

        <Setter 
            Property="Background"
            Value="Transparent" />

        <Setter
            Property="Padding"
            Value="5" />
    </Style>
</ResourceDictionary>