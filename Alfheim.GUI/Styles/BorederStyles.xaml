<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Alfheim.GUI.Styles">

    <Style x:Key="BorderWithTrigger"
        TargetType="Border">
        
        <Style.Setters>
            <Setter
                Property="BorderBrush"
                Value="#FFC7C7C7" />

            <Setter
                Property="BorderThickness"
                Value="1" />
        </Style.Setters>

        <Style.Triggers>
            <Trigger
                Property="IsMouseOver"
                Value="True">

                <Setter
                    Property="BorderBrush"
                    Value="#FFB55A86"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BorderForTextBoxAndButton"
        TargetType="Border">

        <Style.Setters>
            <Setter
                Property="BorderBrush"
                Value="#FFC7C7C7" />

            <Setter
                Property="BorderThickness"
                Value="1" />
        </Style.Setters>

        <Style.Triggers>
            <Trigger
                Property="IsMouseOver"
                Value="True">

                <Setter
                    Property="BorderBrush"
                    Value="#FFB55A86"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style
        x:Key="DefaultBorder"
        TargetType="Border">
        
        <Style.Setters>
            <Setter
                Property="BorderBrush"
                Value="#FFC7C7C7" />

            <Setter
                Property="BorderThickness"
                Value="1" />
        </Style.Setters>
    </Style>
    
    <Style x:Key="BorderForSimpleTextBlock"
        TargetType="Border">

        <Setter
            Property="Margin"
            Value="20 10" />

        <Setter
            Property="BorderBrush"
            Value="#FFC7C7C7" />

        <Setter
            Property="BorderThickness"
            Value="1" />

        <Setter
            Property="Margin"
            Value="5"/>
    </Style>
</ResourceDictionary>